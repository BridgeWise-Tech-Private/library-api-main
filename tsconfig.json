{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2019",
    "module": "ESNext",
    "lib": [
      "ES2019",
      "ES2020.BigInt",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.Symbol.WellKnown",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "declaration": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node"],
    "paths": {},
    "baseUrl": "./src/",
    "noImplicitOverride": true,
  },
  "path": {
    "#db/*": "db/*",
    "#models/*": "models/*",
    "#services/*": "services/*",
    "#src/*": "/*",
    "#test/*": "__tests__/*",
    "#validations/*": "validations/*",
    "#utils/*": "utils/*",
    "#lib/*": "lib/*",
    "#errors/*": "errors/*"
  },
  "include": ["./src/**/*.*"],
  "exclude": [
    "node_modules",
    "build",
    "logs",
    ".git",
    ".data"
  ]
}
