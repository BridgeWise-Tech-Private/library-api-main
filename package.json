{
  "name": "library-api-v2",
  "version": "3.0.0",
  "description": "Library API for managing books",
  "license": "ISC",
  "scripts": {
    "build": "node ace build --production",
    "commit": "git-cz",
    "dev": "node ace serve --watch",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "prepare": "node .husky/install.mjs",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "prestart": "node ace generate:manifest",
    "start": "node server.js",
    "test": "node -r @adonisjs/assembler/build/register japaFile.ts",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": ".prettierrc.mjs",
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "@adonisjs/eslint-config/app",
      "plugin:adonis/typescriptApp"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "dependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/repl": "^3.1.11",
    "axios": "^1.7.9",
    "bad-words": "^4.0.0",
    "cron": "^3.3.2",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "pg": "^8.13.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/lodash": "^4.17.14",
    "@types/luxon": "^3.4.2",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/parser": "^8.19.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "japa": "^4.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.12.0",
    "typescript": "^5.7.2",
    "youch": "^3.3.4",
    "youch-terminal": "^2.2.3"
  }
}