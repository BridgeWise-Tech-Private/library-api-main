{
  "name": "library-api-v2",
  "version": "3.0.0",
  "description": "Library API for managing books",
  "license": "ISC",
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#commands/*": "./commands/*.js",
    "#utils/*": "./app/utils/*.js",
    "#libraries/*": "./app/libraries/*.js",
    "#enums/*": "./contracts/enums/*.js",
    "#types/*": "./contracts/types/*.js",
    "#decorators/*": "./app/decorators/*.js",
    "#request_validators/*": "./app/validators/request_validators/*.js",
    "#routes/*": "./start/routes/*.js",
    "#views/*": "./database/views/*.js",
    "#crons/*": "./app/crons/*.js"
  },
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "prepare": "node .husky/install.mjs",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": ".prettierrc.json",
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "dependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/repl": "^3.1.11",
    "bad-words": "^4.0.0",
    "cron": "^3.3.2",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "pg": "^8.13.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/lodash": "^4.17.14",
    "@types/luxon": "^3.4.2",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/parser": "^8.19.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "sort-package-json": "^2.12.0",
    "typescript": "4.8",
    "youch": "^3.3.4",
    "youch-terminal": "^2.2.3"
  }
}