{
  "name": "library-api-v3",
  "version": "3.0.0",
  "description": "Library API for managing books",
  "license": "ISC",
  "author": {
    "name": "BridgeWise tech"
  },
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#commands/*": "./commands/*.js",
    "#utils/*": "./app/utils/*.js",
    "#libraries/*": "./app/libraries/*.js",
    "#enums/*": "./contracts/enums/*.js",
    "#types/*": "./contracts/types/*.js",
    "#decorators/*": "./app/decorators/*.js",
    "#request_validators/*": "./app/validators/request_validators/*.js",
    "#routes/*": "./start/routes/*.js",
    "#views/*": "./database/views/*.js",
    "#crons/*": "./app/crons/*.js"
  },
  "scripts": {
    "build": "node ace build",
    "commit": "git-cz",
    "dev": "node ace serve --hmr",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "prepare": "node .husky/install.mjs",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "start": "node build/bin/server.js",
    "test": "node ace test",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": ".prettierrc.mjs",
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "@adonisjs/eslint-config/app",
      "plugin:adonis/typescriptApp"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.3.1",
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lock": "^1.1.1",
    "@adonisjs/lucid": "^21.5.1",
    "@vinejs/vine": "^3.0.0",
    "bad-words": "^4.0.0",
    "cron": "^3.3.2",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@japa/api-client": "^2.0.4",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@swc/core": "1.10.1",
    "@types/lodash": "^4.17.13",
    "@types/luxon": "^3.4.2",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^22.10.2",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "git-cz": "^4.9.0",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.12.0",
    "ts-node-maintained": "^10.9.4",
    "typescript": "~5.7"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  }
}
